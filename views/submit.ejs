<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Submit Form</title>
        <link rel="stylesheet" href="css/submit.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>

    <body>
        <div class="head">
            <h2>Submit your Article</h2>
        </div>
        <form action="/submit" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter your title here">
              </div>
              <div class="mb-3">
                  <label for="content" class="form-label">Content</label>
                  <textarea class="form-control" id="content" name="content" rows="5"></textarea>

                  <div class="mksa">
                    <div class="mksa-label">
                        <label for="mksa" class="form-label">MK;SA (Males Kepanjangan Singkat Aja)</label>
                        <!-- <button type="button" id="generateMksa">Auto Generate !!</button> -->
                    </div>
                      <textarea class="form-control" id="mksa" name="mksa" rows="3"></textarea>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Publish</button>
        </form>
    </body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
