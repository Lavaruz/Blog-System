<%- include('template/header') %> 

    <div class="main-signin">
        <h1>Stay curious.</h1>
        <p>Ingin menulis beritamu sendiri?,<br>mari daftarkan diri untuk menerbitkan berita kerenmu</p>
        <a href="/auth/signin"><button class="button-signin">Start writing</button></a>
    </div>
    <div class="main">

        <div class="title">
            <h5>>>> RECENT NEWS</h5>
        </div>

        <div class="news">
            <div class="blog">
                <% news.forEach(doc=>{ %>
                        <div class="blog-card">
                            <div class="blog-main">
                                <div class="blog-autor-info">
                                    <img src="<%= doc.autor.image %> " alt="" onerror=this.src="/img/noprofile.jpg" width="20px" height="20px" style="border-radius: 100%;">
                                    <p class="autor-card"> <%= doc.autor.name %> </p>
                                </div>
                                <a href="/blog/<%= doc._id %> ">
                                    <div class="content">
                                        <h3 class="title-card"><%= doc.title %> </h3>
                                        <p class="content-card"><%= doc.mksa %></p>
                                    </div>
                                </a>
                                <div class="info-card">
                                    <p class="date-card"><%= doc.date %></p>
                                </div>
                                <!-- <button class="delete-card">X</button> -->
                            </div>
                            <a href="/blog/<%= doc._id %> ">
                                <div class="blog-img">
                                    <img src="/img/<%= doc.image.filename %>" alt="" onerror=this.src="/img/noimg.jpg" width="180px" height="180px" style="object-fit: cover;">
                                </div>
                            </a>
                        </div>
                <% }) %> 
            </div>
            <div class="discover">
                <div class="discover-sticky">
                    <h5>DISCOVER MORE OF WHAT MATTERS TO YOU</h5>
                    <div class="discover-topics">
                        <button class="discover-topic">Technology</button>
                        <button class="discover-topic">Health</button>
                        <button class="discover-topic">Economoic</button>
                        <button class="discover-topic">Game</button>
                        <button class="discover-topic">Politics</button>
                        <button class="discover-topic">Machine Learning</button>
                    </div>
                    <!-- <hr> -->
                </div>
                
            </div>
        </div>

    </div>


<%- include('template/footer') %> 